///scr_physics_luigi();

/*
//  Usage:
//      scr_physics_luigi();
//
//  Purpose:
//      Initializes the physical variables for Luigi if SMB2J mode is active.
*/

//Minimum / Maximum Horizontal speed
minspd = 1.3;
maxspd = 2.6;

//Acceleration
acc = 0.06;

//Acceleration (when turning)
accskid = 0.15;

//Deceleration
dec = 0.0375;

//Deceleration (when turning)
decskid = 0.072;

//Gravity
grav = 0.3;

//Gravity (when jumping)
grav_alt = 0.065;

//Acceleration (when underwater)
acc_swim = 0.025;

//Acceleration (when turning underwater)
accskid_swim = 0.05;

//Deceleration (when underwater)
dec_swim = 0.007;

//Gravity (when underwater)
grav_swim = 0.03;
